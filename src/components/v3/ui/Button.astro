---
interface Props {
    href?: string;
    variant?: "primary" | "secondary" | "outline";
    class?: string;
    [key: string]: any;
}

const { href, variant = "primary", class: className, ...rest } = Astro.props;

const baseStyles =
    "inline-flex items-center justify-center px-8 py-4 text-lg font-bold uppercase tracking-wider transition-all duration-300 transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 font-oswald";

const variants = {
    primary:
        "bg-orange-600 text-white hover:bg-orange-500 hover:shadow-lg hover:shadow-orange-600/40",
    secondary:
        "bg-slate-800 text-white hover:bg-slate-700 hover:shadow-lg hover:shadow-slate-800/40",
    outline:
        "border-2 border-orange-600 text-orange-500 hover:bg-orange-600 hover:text-white",
};

const Element = href ? "a" : "button";
---

<Element
    href={href}
    class:list={[baseStyles, variants[variant], className]}
    {...rest}
>
    <slot />
</Element>
