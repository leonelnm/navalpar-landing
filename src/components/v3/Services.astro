---
import { header as getHeader, services as getServices } from "../../data/data";
import { icons } from "../../data/icons";
import ServicioCard from "./ui/ServicioCard.astro";

const header = getHeader();
const services = getServices();
const IconOtherServices = icons["home_repair_service"];
---

<section id="servicios" class="py-24 bg-slate-900 relative">
    <div
        class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-slate-700 to-transparent"
    >
    </div>

    <div class="container mx-auto px-4 md:px-6">
        <div
            class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6"
        >
            <div class="max-w-2xl">
                <span
                    class="text-orange-500 font-bold uppercase tracking-widest text-sm mb-2 block"
                    >Nuestras Especialidades</span
                >
                <h2
                    class="text-4xl md:text-5xl font-bold text-white font-oswald uppercase"
                >
                    {header.title}
                </h2>
            </div>
            <p
                class="text-lg text-slate-400 max-w-md text-right md:text-left border-l-2 border-slate-700 pl-4"
            >
                {header.description}
            </p>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16"
        >
            {services.map((servicio) => <ServicioCard servicio={servicio} />)}

            <article
                class="group relative bg-slate-800/50 border-2 border-dashed border-slate-700 p-8 pt-12 flex flex-col items-center justify-center text-center hover:border-orange-500/50 hover:bg-slate-800 transition-all duration-300"
            >
                <div
                    class="w-16 h-16 bg-slate-800 rounded-full flex items-center justify-center text-slate-500 mb-6 group-hover:text-orange-500 transition-colors"
                >
                    <IconOtherServices class="w-8 h-8" />
                </div>
                <h3
                    class="text-2xl font-bold text-white mb-2 font-oswald uppercase"
                >
                    ¿Otro servicio?
                </h3>
                <p class="text-slate-400 mb-6">
                    Nos adaptamos a tus necesidades específicas.
                </p>
                <a
                    href="#contacto"
                    class="text-orange-500 font-bold uppercase tracking-wider hover:text-white transition-colors"
                >
                    Consultar &rarr;
                </a>
            </article>
        </div>
    </div>
</section>
