---
import FormContacto from "./ui/FormContacto.astro";
import InfoContactoCard from "./ui/InfoContactoCard.astro";
import MapContactoCard from "./ui/MapContactoCard.astro";
---

<section id="contacto" class="py-24 bg-slate-900 relative">
    <div class="absolute inset-0 bg-[url('/img/pattern-dark.png')] opacity-5">
    </div>
    <div class="container mx-auto px-4 md:px-6 relative">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2
                class="text-4xl md:text-5xl font-bold text-white mb-6 font-oswald uppercase"
            >
                Contacta con <span class="text-orange-600">Nosotros</span>
            </h2>
            <p class="text-xl text-slate-400 font-light">
                Estamos listos para empezar.
            </p>
        </div>
        <div class="flex flex-col sm:grid sm:grid-cols-1 lg:grid-cols-2 gap-12">
            <FormContacto />
            <div class="flex flex-col space-y-12">
                <InfoContactoCard />
                <MapContactoCard />
            </div>
        </div>
    </div>
</section>
