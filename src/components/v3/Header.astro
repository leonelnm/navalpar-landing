---
import { companyInfo } from "../../data/data";
import { icons } from "../../data/icons";
import Button from "./ui/Button.astro";

const PhoneIcon = icons["phone"];
const { phoneNumbers } = companyInfo();

const numbersFormatted = phoneNumbers.map((number) =>
    number.replace(/\s+/g, ""),
);
---

<header
    class="fixed top-0 z-50 w-full bg-slate-900/90 backdrop-blur-md border-b border-slate-800"
>
    <div
        class="container mx-auto px-4 md:px-6 h-24 flex items-center justify-between"
    >
        <div class="flex items-center">
            <a href="/versions/v3" class="flex items-center gap-3 group">
                <div
                    class="w-12 h-12 bg-orange-600 flex items-center justify-center text-white font-bold text-2xl transform -skew-x-12 group-hover:bg-orange-500 transition-colors"
                >
                    <span class="transform skew-x-12">N</span>
                </div>
                <div class="flex flex-col">
                    <span
                        class="text-slate-400 text-xs font-bold tracking-[0.2em] uppercase"
                        >Servicios</span
                    >
                    <span
                        class="text-white font-bold text-2xl leading-none tracking-tight font-oswald uppercase"
                        >Navalpar</span
                    >
                </div>
            </a>
        </div>

        <nav class="hidden md:flex items-center space-x-10">
            <a
                href="#inicio"
                class="text-sm font-bold uppercase tracking-widest text-slate-300 hover:text-orange-500 transition-colors"
                >Inicio</a
            >
            <a
                href="#servicios"
                class="text-sm font-bold uppercase tracking-widest text-slate-300 hover:text-orange-500 transition-colors"
                >Servicios</a
            >
            <a
                href="#contacto"
                class="text-sm font-bold uppercase tracking-widest text-slate-300 hover:text-orange-500 transition-colors"
                >Contacto</a
            >
            <a
                href="#presupuesto"
                class="text-sm font-bold uppercase tracking-widest text-slate-300 hover:text-orange-500 transition-colors"
                >Presupuesto</a
            >
        </nav>

        <div class="flex items-center gap-6">
            <a
                href={`tel:${numbersFormatted[0]}`}
                class="hidden lg:flex items-center gap-2 text-orange-500 hover:text-white transition-colors"
            >
                <PhoneIcon width={24} height={24} />
                <span class="text-lg font-bold font-oswald"
                    >{phoneNumbers[0]}</span
                >
            </a>
            <Button
                href="#presupuesto"
                variant="primary"
                class="hidden sm:inline-flex text-sm py-3 px-6"
            >
                Presupuesto
            </Button>
        </div>
    </div>
</header>
