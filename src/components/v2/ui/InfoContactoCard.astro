---
import { icons } from "../../../data/icons";
import { companyInfo } from "../../../data/data";

const PhoneIcon = icons["phone"];
const MailIcon = icons["mail"];
const LocationIcon = icons["location_on"];
const ScheduleIcon = icons["schedule"];
const {
    phoneNumbers: numerosTelefono,
    address,
    workingHours,
    email,
} = companyInfo();
---

<div class="bg-white p-8 border border-slate-200 h-full">
    <h3 class="text-2xl font-bold text-slate-900 mb-8">
        Información de contacto
    </h3>
    <div class="space-y-8">
        <div class="flex items-start">
            <div
                class="w-10 h-10 bg-blue-50 flex items-center justify-center text-blue-600 mr-4 rounded-sm shrink-0"
            >
                <PhoneIcon class="w-5 h-5" />
            </div>
            <div>
                <p class="font-bold text-slate-900 mb-1">Teléfono</p>
                {
                    numerosTelefono.map((numero) => (
                        <p class="text-slate-600">{numero}</p>
                    ))
                }
            </div>
        </div>

        <div class="flex items-start">
            <div
                class="w-10 h-10 bg-blue-50 flex items-center justify-center text-blue-600 mr-4 rounded-sm shrink-0"
            >
                <MailIcon class="w-5 h-5" />
            </div>
            <div>
                <p class="font-bold text-slate-900 mb-1">Email</p>
                <p class="text-slate-600">{email}</p>
            </div>
        </div>

        <div class="flex items-start">
            <div
                class="w-10 h-10 bg-blue-50 flex items-center justify-center text-blue-600 mr-4 rounded-sm shrink-0"
            >
                <LocationIcon class="w-5 h-5" />
            </div>
            <div>
                <p class="font-bold text-slate-900 mb-1">Dirección</p>
                <p class="text-slate-600">
                    {address}
                </p>
            </div>
        </div>

        <div class="flex items-start">
            <div
                class="w-10 h-10 bg-blue-50 flex items-center justify-center text-blue-600 mr-4 rounded-sm shrink-0"
            >
                <ScheduleIcon class="w-5 h-5" />
            </div>
            <div>
                <p class="font-bold text-slate-900 mb-1">Horario</p>
                <ul class="text-slate-600">
                    {workingHours.map((hour) => <li>{hour}</li>)}
                </ul>
            </div>
        </div>
    </div>
</div>
