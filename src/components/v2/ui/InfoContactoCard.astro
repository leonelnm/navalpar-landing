---
import { icons } from "../../../data/icons";
import { companyInfo } from "../../../data/data";

const { phoneNumbers, email, address } = companyInfo();
const PhoneIcon = icons["phone"];
const EmailIcon = icons["mail"];
const LocationIcon = icons["location_on"];
---

<div class="space-y-8">
    <div class="flex items-start gap-6">
        <PhoneIcon class="w-8 h-8 text-blue-500 shrink-0" />
        <div>
            <h3
                class="text-sm font-black uppercase tracking-widest text-slate-400 mb-1"
            >
                Teléfono
            </h3>
            {
                phoneNumbers.map((phone) => (
                    <p class="text-xl font-bold">{phone}</p>
                ))
            }
        </div>
    </div>

    <div class="flex items-start gap-6">
        <EmailIcon class="w-8 h-8 text-blue-500 shrink-0" />
        <div>
            <h3
                class="text-sm font-black uppercase tracking-widest text-slate-400 mb-1"
            >
                Email
            </h3>
            <p class="text-xl font-bold">{email}</p>
        </div>
    </div>

    <div class="flex items-start gap-6">
        <LocationIcon class="w-8 h-8 text-blue-500 shrink-0" />
        <div>
            <h3
                class="text-sm font-black uppercase tracking-widest text-slate-400 mb-1"
            >
                Ubicación
            </h3>
            <p class="text-xl font-bold">{address}</p>
        </div>
    </div>
</div>
