---
interface Props {
    href?: string;
    variant?: "primary" | "outline";
    class?: string;
    type?: "button" | "submit" | "reset";
}

const {
    href,
    variant = "primary",
    class: className = "",
    type = "button",
} = Astro.props;

const variants = {
    primary: "bf-button-primary",
    outline: "bf-button-outline",
};
---

{
    href ? (
        <a href={href} class:list={[variants[variant], className]}>
            <slot />
        </a>
    ) : (
        <button type={type} class:list={[variants[variant], className]}>
            <slot />
        </button>
    )
}
