---
import { icons } from "../../../data/icons";

interface Props {
    legend: {
        title: string;
        description: string;
        iconName: string;
    };
}

const { legend } = Astro.props;
const Icon = icons[legend.iconName] || icons["verified"];
---

<div
    class="bg-white p-6 border border-slate-200 flex flex-col items-center text-center hover:border-blue-400 transition-colors duration-200"
>
    <div
        class="w-12 h-12 bg-blue-100 text-blue-600 flex items-center justify-center rounded-full mb-4"
    >
        <Icon class="w-6 h-6" />
    </div>
    <h3 class="text-lg font-bold text-slate-900 mb-2">{legend.title}</h3>
    <p class="text-slate-600 text-sm">{legend.description}</p>
</div>
