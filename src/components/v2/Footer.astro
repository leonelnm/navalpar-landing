---
import { companyInfo } from "../../data/data";
import { icons } from "../../data/icons";

const { phoneNumbers, email, address, socialMedia = {} } = companyInfo();
const PhoneIcon = icons["phone"];
const EmailIcon = icons["mail"];
const LocationIcon = icons["location_on"];
const FacebookIcon = icons["facebook"];
const InstagramIcon = icons["instagram"];

const numbersFormatted = phoneNumbers.map((number) =>
    number.replace(/\s+/g, ""),
);
---

<footer class="bg-slate-900 text-slate-400 py-16">
    <div class="container mx-auto px-4 md:px-6">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12"
        >
            <div>
                <a href="/versions/v2" class="flex items-center gap-2 mb-6">
                    <div
                        class="w-8 h-8 bg-blue-600 text-white flex items-center justify-center rounded-sm"
                    >
                        <span class="text-lg font-bold">N</span>
                    </div>
                    <span class="text-white font-bold text-xl">Navalpar</span>
                </a>
                <p class="text-slate-400 leading-relaxed mb-6 text-sm">
                    Servicios integrales de mantenimiento y reformas con la
                    garantía de años de experiencia.
                </p>
                <div class="flex space-x-4">
                    {
                        socialMedia.facebook && (
                            <a
                                href={socialMedia.facebook}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-slate-400 hover:text-white transition-colors"
                            >
                                <FacebookIcon class="w-5 h-5" />
                            </a>
                        )
                    }
                    {
                        socialMedia.instagram && (
                            <a
                                href={socialMedia.instagram}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-slate-400 hover:text-white transition-colors"
                            >
                                <InstagramIcon class="w-5 h-5" />
                            </a>
                        )
                    }
                </div>
            </div>

            <div>
                <h3 class="text-white font-bold text-lg mb-6">Enlaces</h3>
                <ul class="space-y-3 text-sm">
                    <li>
                        <a
                            href="#inicio"
                            class="hover:text-blue-400 transition-colors"
                            >Inicio</a
                        >
                    </li>
                    <li>
                        <a
                            href="#servicios"
                            class="hover:text-blue-400 transition-colors"
                            >Servicios</a
                        >
                    </li>
                    <li>
                        <a
                            href="#contacto"
                            class="hover:text-blue-400 transition-colors"
                            >Contacto</a
                        >
                    </li>
                    <li>
                        <a
                            href="#presupuesto"
                            class="hover:text-blue-400 transition-colors"
                            >Presupuesto</a
                        >
                    </li>
                    <li>
                        <a
                            href="/aviso-legal"
                            class="hover:text-blue-400 transition-colors"
                            >Aviso Legal</a
                        >
                    </li>
                    <li>
                        <a
                            href="/politica-de-privacidad"
                            class="hover:text-blue-400 transition-colors"
                            >Política de Privacidad</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h3 class="text-white font-bold text-lg mb-6">Contacto</h3>
                <ul class="space-y-4 text-sm">
                    <li class="flex items-start gap-3">
                        <LocationIcon class="w-5 h-5 text-blue-500 shrink-0" />
                        <span>{address}</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <PhoneIcon class="w-5 h-5 text-blue-500 shrink-0" />
                        <div class="flex flex-col">
                            {
                                phoneNumbers.map((number, index) => (
                                    <a
                                        href={`tel:${numbersFormatted[index]}`}
                                        class="hover:text-blue-400 transition-colors"
                                    >
                                        {number}
                                    </a>
                                ))
                            }
                        </div>
                    </li>
                    <li class="flex items-center gap-3">
                        <EmailIcon class="w-5 h-5 text-blue-500 shrink-0" />
                        <a
                            href={`mailto:${email}`}
                            class="hover:text-blue-400 transition-colors"
                            >{email}</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h3 class="text-white font-bold text-lg mb-6">Horario</h3>
                <div class="text-sm space-y-2">
                    <p>
                        <span class="text-slate-500 block mb-1"
                            >Lunes - Viernes</span
                        >
                        <span class="text-white font-medium">8:00 - 18:00</span>
                    </p>
                    <p>
                        <span class="text-slate-500 block mb-1"
                            >Fines de semana</span
                        >
                        <span class="text-white font-medium">Cerrado</span>
                    </p>
                </div>
            </div>
        </div>

        <div
            class="border-t border-slate-800 pt-8 text-center text-slate-600 text-sm"
        >
            <p>
                &copy; {new Date().getFullYear()} Servicios Navalpar. Todos los derechos
                reservados.
            </p>
        </div>
    </div>
</footer>
