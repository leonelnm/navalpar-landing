---
import { companyInfo } from "../data/data";

const { name, phoneNumbers, email, address, workingHours } = companyInfo();
---

<footer class="bg-blue-950 text-white">
  <div class="container mx-auto px-4 md:px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Columna 1: Sobre nosotros -->
      <div class="mb-6 md:mb-0">
        <h3 class="text-xl font-bold mb-4">{name}</h3>
        <p class="text-gray-300 text-sm">
          Especialistas en fontanería, albañilería, pintura, carpintería y
          electricidad, ofreciendo soluciones integrales para el hogar y
          negocios.
        </p>
      </div>

      <!-- Columna 2: Navegación -->
      <div class="mb-6 md:mb-0">
        <h3 class="text-xl font-bold mb-4">Navegación</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/#inicio" class="text-gray-300 hover:text-white transition"
              >Inicio</a
            >
          </li>
          <li>
            <a
              href="/#servicios"
              class="text-gray-300 hover:text-white transition">Servicios</a
            >
          </li>
          <li>
            <a
              href="/#contacto"
              class="text-gray-300 hover:text-white transition">Contacto</a
            >
          </li>
          <li>
            <a
              href="/#presupuesto"
              class="text-gray-300 hover:text-white transition">Presupuesto</a
            >
          </li>
        </ul>
      </div>

      <!-- Columna 3: Contacto -->
      <div class="mb-6 md:mb-0">
        <h3 class="text-xl font-bold mb-4">Contacto</h3>
        <ul class="space-y-2 text-sm text-gray-300">
          {
            phoneNumbers.map((phone) => (
              <li>
                <a
                  href={`tel:${phone.replace(/\s+/g, "")}`}
                  class="hover:text-white transition"
                >
                  {phone}
                </a>
              </li>
            ))
          }
          <li>
            <a href={`mailto:${email}`} class="hover:text-white transition">
              {email}
            </a>
          </li>
          <li class="pt-2">{address}</li>
        </ul>
      </div>

      <!-- Columna 4: Horario -->
      <div class="mb-6 md:mb-0">
        <h3 class="text-xl font-bold mb-4">Horario</h3>
        <ul class="space-y-2 text-sm text-gray-300">
          {workingHours.map((line) => <li>{line}</li>)}
        </ul>
      </div>
    </div>

    <div
      class="mt-10 pt-6 border-t border-blue-900 flex flex-col md:flex-row justify-between items-center text-sm"
    >
      <div class="flex space-x-4 mb-4 md:mb-0">
        <a
          href="/politica-de-privacidad"
          class="text-gray-400 hover:text-white transition"
          >Política de Privacidad</a
        >
        <a href="/aviso-legal" class="text-gray-400 hover:text-white transition"
          >Aviso Legal</a
        >
      </div>
      <p class="text-gray-500">
        © {new Date().getFullYear()}
        {name}. Todos los derechos reservados.
      </p>
    </div>
  </div>
  <div class="bg-blue-950/50 py-2">
    <div class="container mx-auto text-center">
      <p class="text-xs text-gray-500">
        Sitio desarrollado por
        <a
          href="https://enavarrete.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-blue-300 hover:text-white underline"
        >
          Erik Navarrete
        </a>
      </p>
    </div>
  </div>
</footer>
