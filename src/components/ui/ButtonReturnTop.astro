---
interface Props {
  variant?: "blue" | "orange";
}

const { variant = "blue" } = Astro.props;

const variants = {
  blue: "bg-blue-600 hover:bg-blue-700 focus:bg-blue-700 active:bg-blue-800",
  orange:
    "bg-orange-600 hover:bg-orange-700 focus:bg-orange-700 active:bg-orange-800",
};

const colorClasses = variants[variant];
---

<!-- Back to top button -->
<button
  type="button"
  data-twe-ripple-init
  data-twe-ripple-color="light"
  class:list={[
    "fixed! bottom-5 end-5 sm:bottom-10 sm:end-10 hidden rounded-full p-4 sm:p-7 text-xs font-medium uppercase leading-tight text-white shadow-md transition duration-150 ease-in-out hover:shadow-lg focus:shadow-lg focus:outline-hidden focus:ring-0 active:shadow-lg md:opacity-50 hover:md:opacity-100",
    colorClasses,
  ]}
  id="btn-back-to-top"
>
  <span class="[&>svg]:w-4">
    <svg fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18"></path>
    </svg>
  </span>
</button>

<script>
  function initButtonReturnTop() {
    const button = document.getElementById("btn-back-to-top");
    if (!button) return;

    const SCROLL_THRESHOLD = 200;

    // Asegúrate de no registrar múltiples veces
    const backToTop = () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    };

    const toggleVisibility = () => {
      const scrollTop =
        document.documentElement.scrollTop || document.body.scrollTop;

      button.classList.toggle("hidden", scrollTop <= SCROLL_THRESHOLD);
    };

    // Elimina listeners anteriores si los hubiera
    button.removeEventListener("click", backToTop);
    window.removeEventListener("scroll", toggleVisibility);

    // Agrega los nuevos
    button.addEventListener("click", backToTop);
    window.addEventListener("scroll", toggleVisibility);

    // Verifica el estado inicial
    toggleVisibility();
  }
  document.addEventListener("astro:after-swap", initButtonReturnTop);

  initButtonReturnTop();
</script>
