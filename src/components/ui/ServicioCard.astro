---
import ArrowForward from "../../assets/icons/arrow_forward.svg";
import { icons } from "../../data/icons";

interface Props {
  servicio: Service;
}

const { servicio }: Props = Astro.props;
const SelectedIcon = icons[servicio.iconName];
---

<article
  class="flex flex-col bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300"
>
  <div class="h-48 overflow-hidden">
    <img
      src={servicio.imageUrl}
      alt=`Servicio de ${servicio.title} imagen`
      class="w-full h-full object-cover"
    />
  </div>
  <div class="flex-1 flex flex-col p-6">
    
    <header class="flex items-center mb-3">
      <SelectedIcon class="text-blue-600 text-2xl mr-2"/>
      <!-- <span
              data-id="wuIU"
              class="material-symbols-outlined text-blue-600 text-2xl mr-2"
              >water_drop</span
            > -->
      <h3 class="text-xl font-bold text-gray-800">
        {servicio.title}
      </h3>
    </header>

    <section>
      <p class="flex-1 text-gray-600 mb-4">
        {servicio.description}
      </p>
    </section>

    <footer>
      <a
        href="#contacto"
        class="inline-flex items-center space-x-1 text-blue-600 font-medium md:hover:text-blue-800 transition-colors"
      >
        <span>Más información</span>
        <ArrowForward />
      </a>
    </footer>
  </div>
</article>
